<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	<!-- 配置mybatis分页拦截器 -->
	<bean id="offsetLimitIntercepter" class="com.txframework.core.jdbc.OffsetLimitInterceptor">
		<property name="properties">
			<props>
				<prop key="dialectName">${jdbc.dialectName}</prop>
				<prop key="dialectClass">${jdbc.dialectClass}</prop>
			</props>
		</property>
	</bean>
	
   <!-- mybatis分页插件 -->
	<bean id="pagehelper" class="com.github.pagehelper.PageHelper">
		<property name="properties">
			<props>
				<prop key="offsetAsPageNum">true</prop>
				<prop key="rowBoundsWithCount">true</prop>
				<prop key="pageSizeZero">true</prop>
				<prop key="reasonable">false</prop>
				<prop key="supportMethodsArguments">false</prop>
			</props>
		</property>
	</bean>
	
</beans>
